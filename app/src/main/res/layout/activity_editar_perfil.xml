<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Editar_Perfil">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/foto_usuario_editar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        />
    <Button
        android:id="@+id/bt_editar_selecionar_foro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecione uma foto"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="@android:color/transparent"
        />
    <EditText
        android:id="@+id/editNomeEditar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome"
        android:background="@drawable/edit_tex_shape"
        android:padding="15dp"
        android:inputType="text"
        android:maxLines="1"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        />
    <Button
        android:id="@+id/bt_atualizar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Atualizar Dados"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="15dp"
        android:layout_margin="20dp"
        />

</LinearLayout>